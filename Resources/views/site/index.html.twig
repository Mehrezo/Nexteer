{% extends 'NexteerPoBundle::layout.html.twig' %}
{##}
{% block left_content %}
{% include "NexteerPoBundle::menu_gauche.html.twig" %}
{% endblock %}
{##}
{% block content %}
    <br><br>

<table id="rounded-corner" summary="2007 Major IT Companies' Profit" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Libelle</th>
            <th>Pays_id</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('site_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.libelle }}</td>
            <td>{{ entity.paysid }}</td>
            <td><a href="{{ path('site_show', { 'id': entity.id }) }}"><img src="{{ asset('bundles/nexteerpo/images/Show.png') }}" alt="" title="" border="0" width="30"/></a></td>
            <td><a href="{{ path('site_edit', { 'id': entity.id }) }}"><img src="{{ asset('bundles/nexteerpo/images/Edit.png') }}" alt="" title="" border="0" width="30"/></a></td>
            <td><a onClick="return(confirm('suppression.confirmation'));" href="{{ path('site_delete', { 'id': entity.id }) }}"><img src="{{ asset('bundles/nexteerpo/images/Delete.png') }}" width="30"/></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<br><p><a href="{{ path('site_new') }}">
        <img src="{{ asset('bundles/nexteerpo/images/Add.png') }}" alt="{{ 'general.administration.Add' | trans }}" title="" border="0" width="30" />{{ 'general.administration.Add' | trans }}
    </a></p>

{% endblock %}