<table id="rounded-corner" summary="2007 Major IT Companies' Profit" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Valeur</th>
            <th>Pays_id</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('tva_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.valeur }}</td>
            <td>{{ entity.paysid }}</td>
            <td><a href="{{ path('tva_show', { 'id': entity.id }) }}"><img src="{{ asset('bundles/nexteerpo/images/Show.png') }}" alt="" title="" border="0" width="30"/></a></td>
            <td><a href="{{ path('tva_edit', { 'id': entity.id }) }}"><img src="{{ asset('bundles/nexteerpo/images/Edit.png') }}" alt="" title="" border="0" width="30"/></a></td>
